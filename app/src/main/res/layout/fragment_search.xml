<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainColor"
    tools:context="com.atech.movieflix.ui.Fragment.SearchFragment.SearchFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/show_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/no_result"
        android:layout_width="150.0dip"
        android:layout_height="150.0dip"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/show_search_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/show_search_result"
        app:layout_constraintTop_toTopOf="@+id/show_search_result"
        app:lottie_autoPlay="true"
        app:lottie_fileName="empty.json"
        app:lottie_loop="true" />

</androidx.constraintlayout.widget.ConstraintLayout>